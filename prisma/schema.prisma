generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_POSTGRES_DB_URL")
}

model Account {
  group       String
  id          Int      @id @default(autoincrement())
  name        String
  entries     Entry[]
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
}

model Entry {
  account       Account     @relation(fields: [accountId], references: [id])
  accountId     Int
  credit        Decimal
  debit         Decimal
  id            Int         @id @default(autoincrement())
  memo          String?
  settledDate   DateTime
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId Int
  user          User?       @relation(fields: [userId], references: [id])
  userId        Int?
  createdDate   DateTime    @default(now())
  updatedDate   DateTime    @updatedAt
}

model Tag {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  transactions Transaction[] @relation("TransactionsToTags")
  createdDate  DateTime      @default(now())
  updatedDate  DateTime      @updatedAt
}

model Transaction {
  accruedDate DateTime
  id          Int      @id @default(autoincrement())
  entries     Entry[]
  tags        Tag[]    @relation("TransactionsToTags")
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
}

model User {
  id          Int      @id @default(autoincrement())
  entries     Entry[]
  name        String
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
}
